<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;800&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<header id="ysa-header" class="ysa-header">
  <div class="ysa-header__inner">
    {% if settings.logo != blank %}
    <a href="/" class="ysa-logo" aria-label="{{ shop.name }}">
      {{ settings.logo | image_url: height: 32 | image_tag: class: 'ysa-logo__img', alt: shop.name }}
    </a>
    {% else %}
    <a href="/" class="ysa-logo ysa-logo--text">{{ shop.name }}</a>
    {% endif %}
    <nav class="ysa-nav" aria-label="Main navigation">
      <a href="/">Home</a>
      <a href="/collections/all">Catalog</a>
      <a href="/pages/contact">Contact</a>
    </nav>
    <form action="/search" method="get" class="ysa-search" role="search">
      <input type="search" name="q" placeholder="Search our store" aria-label="Search">
    </form>
    <div class="ysa-header__actions">
      <a href="/account" class="ysa-icon" aria-label="Account">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-3-3.87"/>
          <path d="M4 21v-2a4 4 0 0 1 3-3.87"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
      </a>
      <a href="/cart" class="ysa-icon" aria-label="Cart">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
      </a>
    </div>
  </div>
</header>

<style>
  #ysa-header{
    --bg-900:#050816; --bg-800:#091025;
    --cyber-500:#12b4ff; --cyber-400:#4fdcff; --cyber-300:#86f2ff;
    --text-100:#e8f6ff; --text-300:#b0c8e8;
    position:sticky;top:0;width:100%;z-index:10000;
    background:rgba(9,16,37,.85);backdrop-filter:blur(8px);
    font-family:"Outfit",system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial;
  }
  #ysa-header::after{
    content:"";position:absolute;left:0;bottom:0;width:100%;height:2px;
    background:linear-gradient(90deg,rgba(18,180,255,0)0%,rgba(18,180,255,.9)50%,rgba(18,180,255,0)100%);
    box-shadow:0 0 16px rgba(18,180,255,.65);opacity:0;transition:opacity .3s ease;
  }
  #ysa-header.scrolled::after{opacity:1;}
  #ysa-header .ysa-header__inner{display:flex;align-items:center;gap:24px;padding:8px clamp(16px,2vw,32px);flex-wrap:nowrap;}
  #ysa-header .ysa-logo{flex:0 0 auto;display:inline-block;}
  #ysa-header .ysa-logo--text{font-family:"Orbitron",sans-serif;font-weight:800;font-size:24px;text-decoration:none;color:var(--cyber-400);text-shadow:0 0 18px rgba(18,180,255,.35);}
  #ysa-header .ysa-logo__img{display:block;max-height:32px;}
  #ysa-header .ysa-nav{display:flex;gap:16px;flex:0 0 auto;white-space:nowrap;}
  #ysa-header .ysa-nav a{text-decoration:none;color:var(--text-300);font-weight:500;font-size:16px;transition:color .2s ease;}
  #ysa-header .ysa-nav a:hover{color:#fff;}
  #ysa-header .ysa-search{flex:1;}
  #ysa-header .ysa-search input{width:100%;padding:8px 12px;border-radius:8px;border:1px solid rgba(134,242,255,.14);
    background:linear-gradient(180deg,rgba(6,16,34,.72),rgba(6,12,25,.54));color:var(--text-100);}
  #ysa-header .ysa-search input::placeholder{color:var(--text-300);}
  #ysa-header .ysa-header__actions{display:flex;gap:12px;}
  #ysa-header .ysa-icon{width:34px;height:34px;display:inline-flex;align-items:center;justify-content:center;color:var(--cyber-400);transition:transform .2s ease,color .2s ease;text-decoration:none;}
  #ysa-header .ysa-icon:hover{transform:translateY(-2px);color:#fff;}
  #ysa-header .ysa-icon svg{width:24px;height:24px;}
</style>
<script>
  (function(){
    const header=document.getElementById('ysa-header');
    function onScroll(){header.classList.toggle('scrolled', window.scrollY>0);}
    window.addEventListener('scroll', onScroll);
    onScroll();
  })();
</script>
