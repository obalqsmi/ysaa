{%- liquid
  assign label = 'add-ons.agree_to_terms.label_html' | t
  assign warning_text = 'add-ons.agree_to_terms.warning_text' | t
  assign order_title = 'add-ons.agree_to_terms.order_title' | t
  assign yes_label = 'add-ons.agree_to_terms.yes_label' | t
-%}

{%- if label != blank and warning_text != blank and order_title != blank and yes_label != blank -%}
  <div class="dbtfy-agree-to-terms">
    <div class="checkbox rte">
      <input class="dbtfy-agree-to-terms__input"
             id="agree-to-terms-{{ location }}"
             type="checkbox"
             name="attributes[{{ order_title }}]"
             value="{{ yes_label }}">

      <label for="agree-to-terms-{{ location }}">
        {{ label }}
      </label>
    </div>

    <p class="dbtfy-agree-to-terms__error-message errors mb-0 mt-2" hidden></p>
  </div>
{%- endif -%}