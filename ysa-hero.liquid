<section id="ysa-hero-{{ section.id }}" class="ysa-hero" style="--header-offset: {{ section.settings.header_offset | default: 0 }}px;">
  <!-- Google Fonts (shared) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;800&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    /* ====== SHARED BACKDROP ====== */
    #ysa-hero-{{ section.id }}{
      --bg-900:#050816; --bg-800:#091025;
      --cyber-500:#12b4ff; --cyber-400:#4fdcff; --cyber-300:#86f2ff;
      --text-100:#e8f6ff; --text-300:#b0c8e8;
      --h1: clamp(40px, 7vw, 108px); --sub: clamp(16px, 2vw, 24px); --btn: clamp(14px, 1.2vw, 16px);
      --gap-featured: {{ section.settings.gap_featured_top | default: 56 }}px;
      --gap-how: {{ section.settings.gap_how_top | default: 72 }}px;
      --gap-reviews: {{ section.settings.gap_reviews_top | default: 72 }}px;
      --gap-footer: {{ section.settings.gap_footer_top | default: 72 }}px;
      position:relative;width:100%;color:var(--text-100);overflow:hidden;
      background: radial-gradient(1200px 600px at 70% 10%, rgba(0,229,255,.18), transparent 60%),
                  radial-gradient(900px 420px at 20% 80%, rgba(75,107,255,.16), transparent 60%),
                  linear-gradient(180deg, var(--bg-800) 0%, var(--bg-900) 100%);
      isolation:isolate;font-family:"Outfit",system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial;
    }
    #ysa-hero-{{ section.id }}::before{
      content:"";position:absolute;inset:-10%;opacity:.15;z-index:-3;
      background: linear-gradient(transparent 96%, rgba(79,220,255,.2) 96%) 0 0/100% 30px,
                  linear-gradient(90deg, transparent 96%, rgba(79,220,255,.2) 96%) 0 0/30px 100%;
    }

    /* MATRIX RAIN */
    #ysa-hero-{{ section.id }} canvas{position:fixed;inset:0;width:100%;height:100%;z-index:-1;pointer-events:none;filter:drop-shadow(0 0 6px rgba(79,220,255,.35));}

    /* HERO */
    #ysa-hero-{{ section.id }} .hero-viewport{position:relative;min-height:calc(100svh - var(--header-offset,0px));display:flex;flex-direction:column;width:100%;padding-bottom:clamp(60px,8vh,100px);}
    #ysa-hero-{{ section.id }} .hero-viewport .ysa-center{flex:1;display:flex;flex-direction:column;justify-content:center;}
    #ysa-hero-{{ section.id }} .ysa-center{ text-align:center; width:min(1100px, 92vw); padding: clamp(20px, 3vw, 40px); margin: 0 auto; }
    #ysa-hero-{{ section.id }} h1{
      margin:0 0 clamp(14px,2vh,22px) 0; line-height:.98; font-family:"Orbitron",sans-serif; font-weight:800; font-size:var(--h1); letter-spacing:.6px;
      background: conic-gradient(from 210deg,#bff5ff 0%, #76e6ff 25%, var(--cyber-500) 55%, #7dd6ff 80%, #d9fbff 100%);
      -webkit-background-clip:text;background-clip:text;color:transparent;text-shadow:0 0 36px rgba(18,180,255,.35);
    }
    #ysa-hero-{{ section.id }} .sub{ color:var(--text-300); font-size:var(--sub); line-height:1.65; margin:0 auto clamp(18px, 3vh, 28px); max-width: 900px; }
    #ysa-hero-{{ section.id }} .ysa-cta{ display:flex; gap:16px; justify-content:center; flex-wrap:wrap; margin-top: clamp(8px, 1.6vh, 18px); }
    #ysa-hero-{{ section.id }} .ysa-btn{ display:inline-flex; align-items:center; gap:10px; justify-content:center; padding: clamp(12px,1.4vw,16px) clamp(20px,2.4vw,26px); border-radius:16px; text-decoration:none; font-weight:800; font-size:var(--btn); transition:transform .2s ease, box-shadow .2s ease, background .2s ease, border-color .2s ease, color .2s ease; cursor:pointer; font-family:"Outfit",sans-serif; }
    #ysa-hero-{{ section.id }} .icon{ width:18px; height:18px; display:inline-block; }
    #ysa-hero-{{ section.id }} .icon svg{ width:100%; height:100%; fill: currentColor; }
    #ysa-hero-{{ section.id }} .primary{ background: radial-gradient(120% 120% at 30% 30%, #4fdcff, #12b4ff); color:#001018; border:1px solid rgba(134,242,255,.35); box-shadow: 0 8px 28px rgba(18,180,255,.38), inset 0 0 16px rgba(255,255,255,.18); }
    #ysa-hero-{{ section.id }} .primary:hover{ transform: translateY(-4px) scale(1.03); box-shadow: 0 12px 38px rgba(18,180,255,.58), inset 0 0 22px rgba(255,255,255,.25); }
    #ysa-hero-{{ section.id }} .ghost{ border:1px solid rgba(134,242,255,.42); color:var(--cyber-300); background: linear-gradient(180deg, rgba(6,16,34,.72), rgba(6,12,25,.54)); box-shadow: inset 0 0 12px rgba(79,220,255,.10); }
    #ysa-hero-{{ section.id }} .ghost:hover{ transform: translateY(-4px) scale(1.03); border-color: rgba(134,242,255,.7); box-shadow: 0 12px 32px rgba(18,180,255,.28), inset 0 0 18px rgba(79,220,255,.18); color:#fff; }
    #ysa-hero-{{ section.id }} .trust{ margin-top: clamp(16px, 2vh, 24px); color:var(--text-300); display:flex; align-items:center; gap:12px; justify-content:center; flex-wrap:wrap; font-size:clamp(13px,1vw,15px); }
    #ysa-hero-{{ section.id }} .stars{ display:inline-flex; gap:4px; }
    #ysa-hero-{{ section.id }} .stars svg{ width:18px; height:18px; }

    /* ===== DIVIDERS (edge-to-edge with stronger glow) ===== */
    #ysa-hero-{{ section.id }} .ysa-divider{
      display: {% if section.settings.show_dividers %}block{% else %}none{% endif %};
      position:relative;
      left:50%;
      transform:translateX(-50%);
      width:100vw;          /* reach the very edges */
      max-width:100vw;
      height:1px;
      margin:0;             /* default, we control per-instance */
      background: linear-gradient(90deg,
                  rgba(18,180,255,0) 0%,
                  rgba(18,180,255,.85) 12%,
                  rgba(18,180,255,.95) 50%,
                  rgba(18,180,255,.85) 88%,
                  rgba(18,180,255,0) 100%);
      box-shadow: 0 0 22px rgba(18,180,255,.65), 0 0 38px rgba(18,180,255,.35);
      opacity:.9;
    }
    /* space before the divider (below the ticker) stays tight */
    #ysa-hero-{{ section.id }} .ysa-divider--tight{
      margin-top: 12px;
    }

    /* TICKER */
    #ysa-hero-{{ section.id }} .ysa-ticker{ position:absolute; bottom:0; left:0; width:100%; overflow:hidden; z-index:1; padding: clamp(20px, 4vh, 40px) 0 12px; -webkit-mask-image: linear-gradient(to right, transparent 0%, #000 8%, #000 92%, transparent 100%); mask-image: linear-gradient(to right, transparent 0%, #000 8%, #000 92%, transparent 100%); }
    #ysa-hero-{{ section.id }} .ysa-ticker .lane{ display:flex; gap:14px; width:max-content; padding-left: 2vw; animation: ysa-marquee-{{ section.id }} 30s linear infinite; }
    #ysa-hero-{{ section.id }} .ysa-ticker .wrap{ display:flex; width:max-content; }
    @keyframes ysa-marquee-{{ section.id }}{ 0%{transform:translateX(0)} 100%{transform:translateX(-50%)} }
    #ysa-hero-{{ section.id }} .ysa-ticker .pill{ display:inline-flex; align-items:center; gap:10px; padding:10px 16px; border-radius:999px; white-space:nowrap; background: rgba(6,16,34,.65); border:1px solid rgba(134,242,255,.14); box-shadow: inset 0 0 12px rgba(79,220,255,.08); color:#a6dfff; font-size:14px; }
    #ysa-hero-{{ section.id }} .ysa-ticker .icon{ width:16px; height:16px; display:inline-block; }
    #ysa-hero-{{ section.id }} .ysa-ticker .icon svg{ width:100%; height:100%; fill:#36d3ff; }

    /* FEATURED PRODUCTS (up to 4) */
    #ysa-hero-{{ section.id }} .featured-wrap{ background:#0b1226; padding: var(--gap-featured) 0 clamp(36px, 8vh, 72px); box-shadow: 0 12px 32px rgba(0,0,0,.35), inset 0 0 60px rgba(79,220,255,.06); }
    #ysa-hero-{{ section.id }} .featured{ width:min(1280px, 94vw); margin:0 auto; padding: clamp(24px, 3vw, 40px); }
    #ysa-hero-{{ section.id }} .featured .head{ display:grid; grid-template-columns:1fr auto; gap:12px; align-items:center; margin-bottom: clamp(18px, 3vh, 28px); }
    #ysa-hero-{{ section.id }} .featured .title{ grid-column:1 / -1; text-align:center; margin:0; font-family:"Orbitron",sans-serif; font-weight:800; font-size: clamp(28px, 3.8vw, 48px); letter-spacing:.4px; background: conic-gradient(from 210deg,#bff5ff 0%, #76e6ff 25%, var(--cyber-500) 55%, #7dd6ff 80%, #d9fbff 100%); -webkit-background-clip:text; background-clip:text; color:transparent; text-shadow: 0 0 24px rgba(18,180,255,.28); }
    #ysa-hero-{{ section.id }} .featured .right{ grid-column:1 / -1; display:flex; justify-content:flex-end; }
    #ysa-hero-{{ section.id }} .featured .view-all{ display:inline-flex; align-items:center; gap:8px; color:var(--cyber-300); text-decoration:none; font-weight:700; padding:8px 12px; border-radius:999px; border:1px solid rgba(134,242,255,.25); background: linear-gradient(180deg, rgba(6,16,34,.65), rgba(6,12,25,.45)); box-shadow: inset 0 0 12px rgba(79,220,255,.10); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease, color .2s ease; }
    #ysa-hero-{{ section.id }} .featured .view-all:hover{ transform: translateY(-6px) scale(1.01); border-color: rgba(134,242,255,.6); color:#fff; text-shadow:0 0 16px rgba(79,220,255,.55); box-shadow: 0 12px 28px rgba(18,180,255,.22), inset 0 0 16px rgba(79,220,255,.16); }
    #ysa-hero-{{ section.id }} .featured .grid{ display:grid; gap: clamp(14px, 2vw, 24px); grid-template-columns: 1fr; }
    @media (min-width: 760px){ #ysa-hero-{{ section.id }} .featured .grid{ grid-template-columns: repeat(2,1fr); } }
    @media (min-width: 1100px){ #ysa-hero-{{ section.id }} .featured .grid{ grid-template-columns: repeat({{ section.settings.featured_columns_desktop | default: 4 }}, 1fr); } }

    #ysa-hero-{{ section.id }} .card{ height:100%; display:flex; flex-direction:column; overflow:hidden; border-radius:16px; border:1px solid rgba(112,226,255,.20); background:#0b1226; box-shadow: 0 12px 32px rgba(0,0,0,.35); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease; will-change: transform; }
    #ysa-hero-{{ section.id }} .card:hover, #ysa-hero-{{ section.id }} .card:focus-within{ transform: translateY(-6px) scale(1.01); border-color: rgba(134,242,255,.55); box-shadow: 0 18px 44px rgba(18,180,255,.28), 0 0 0 1px rgba(134,242,255,.18); outline:none; }
    #ysa-hero-{{ section.id }} .media{ position:relative; aspect-ratio:4/3; overflow:hidden; background:#0e152c; }
    #ysa-hero-{{ section.id }} .media img{ width:100%; height:100%; object-fit:cover; transition: transform .5s ease; }
    #ysa-hero-{{ section.id }} .card:hover .media img{ transform: scale(1.05); }
    #ysa-hero-{{ section.id }} .media::after{ content:""; position:absolute; left:0; right:0; bottom:-1px; height:2px; background: linear-gradient(90deg, rgba(18,180,255,0) 0%, rgba(18,180,255,.9) 20%, #4fdcff 50%, rgba(18,180,255,.9) 80%, rgba(18,180,255,0) 100%); box-shadow: 0 0 14px rgba(18,180,255,.65), 0 0 28px rgba(18,180,255,.35); }
    #ysa-hero-{{ section.id }} .tuned{ position:absolute; top:10px; right:10px; z-index:1; display:inline-flex; align-items:center; gap:8px; padding:6px 10px; border-radius:12px; font-size:12px; font-weight:800; background:#11261a; border:1px solid rgba(120,255,180,.35); color:#9effc8; box-shadow: inset 0 0 10px rgba(120,255,180,.18), 0 0 12px rgba(120,255,180,.18); }
    #ysa-hero-{{ section.id }} .tuned svg{ width:14px; height:14px; fill:#9effc8 }
    #ysa-hero-{{ section.id }} .body{ padding: clamp(14px, 1.8vw, 20px); display:flex; flex-direction:column; gap:10px; flex:1; }
    #ysa-hero-{{ section.id }} .prod-title{ margin:0; font-family:"Orbitron",sans-serif; font-weight:800; font-size: clamp(18px, 1.8vw, 24px); line-height:1.2; }
    #ysa-hero-{{ section.id }} .desc{ color:var(--text-300); font-size:16px; }
    #ysa-hero-{{ section.id }} .quick-badges{ display:flex; flex-wrap:wrap; gap:8px; }
    #ysa-hero-{{ section.id }} .pill{ display:inline-flex; align-items:center; padding:6px 10px; border-radius:12px; font-size:12px; font-weight:800; white-space:nowrap; border:1px solid rgba(134,242,255,.25); box-shadow: inset 0 0 12px rgba(79,220,255,.08); }
    .pill--undetected{ background:#0f2a1f; color:#b7ffd9; }
    .pill--premium{ background:#153326; color:#b7ffd9; }
    .pill--off{ background:#144c3a; color:#e8fff5; border-color: rgba(134,242,255,.35); box-shadow: 0 4px 16px rgba(18,180,255,.15), inset 0 0 10px rgba(255,255,255,.10); }
    #ysa-hero-{{ section.id }} .rating{ display:flex; align-items:center; gap:8px; color:var(--text-300); font-size:13px; filter: drop-shadow(0 0 8px rgba(18,180,255,.45)); }
    #ysa-hero-{{ section.id }} .rating .stars{ display:inline-flex; gap:4px; }
    #ysa-hero-{{ section.id }} .rating .stars svg{ width:16px; height:16px; }
    #ysa-hero-{{ section.id }} .price-row{ display:flex; align-items:baseline; gap:10px; flex-wrap:wrap; margin-top:6px; }
    #ysa-hero-{{ section.id }} .from{ color:var(--text-300); font-weight:700; margin-right:4px; text-transform:uppercase; font-size:12px; letter-spacing:.3px; }
    #ysa-hero-{{ section.id }} .price{ font-weight:800; font-size:18px; color:#fff; text-shadow:0 0 14px rgba(79,220,255,.25); }
    #ysa-hero-{{ section.id }} .compare{ color:var(--text-300); text-decoration:line-through; font-size:14px; opacity:.85; }
    #ysa-hero-{{ section.id }} .hr{ height:1px; width:100%; background:rgba(255,255,255,.08); margin: 12px 0 8px 0; }
    #ysa-hero-{{ section.id }} .bottom-row{ display:flex; align-items:center; justify-content:space-between; gap:12px; flex-wrap:wrap; }
    #ysa-hero-{{ section.id }} .ptype{ color:var(--text-300); font-size:12px; }
    #ysa-hero-{{ section.id }} .btn{ display:inline-flex; align-items:center; justify-content:center; gap:10px; padding:12px 16px; border-radius:14px; font-weight:800; cursor:pointer; border:1px solid rgba(134,242,255,.35); background: radial-gradient(120% 120% at 30% 30%, #4fdcff, #12b4ff); color:#001018; text-decoration:none; font-size:var(--btn); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease, color .2s ease, background .2s ease, filter .2s ease; box-shadow: 0 8px 22px rgba(18,180,255,.32), inset 0 0 14px rgba(255,255,255,.18); }
    #ysa-hero-{{ section.id }} .btn:hover, #ysa-hero-{{ section.id }} .btn:focus-visible{ transform: translateY(-6px) scale(1.03); box-shadow: 0 16px 40px rgba(18,180,255,.55), 0 0 24px rgba(79,220,255,.45), inset 0 0 18px rgba(255,255,255,.24); outline: none; }

    /* HOW */
    #ysa-hero-{{ section.id }} .how{ width:min(1280px, 94vw); margin: var(--gap-how) auto clamp(48px, 10vh, 96px); text-align:center; }
    #ysa-hero-{{ section.id }} .how .how-title{ margin:0 0 6px 0; font-family:"Orbitron",sans-serif; font-weight:800; font-size: clamp(28px, 3.8vw, 52px); background: conic-gradient(from 210deg,#bff5ff 0%, #76e6ff 25%, var(--cyber-500) 55%, #7dd6ff 80%, #d9fbff 100%); -webkit-background-clip:text; background-clip:text; color:transparent; text-shadow: 0 0 24px rgba(18,180,255,.28); }
    #ysa-hero-{{ section.id }} .how .how-sub{ color:var(--text-300); font-size: clamp(14px, 1.6vw, 18px); margin: 0 auto clamp(18px, 3vh, 28px); max-width: 900px; }
    #ysa-hero-{{ section.id }} .how-grid{ display:grid; grid-template-columns: 1fr; gap: clamp(14px, 2vw, 24px); margin-top: clamp(10px, 2vh, 20px); text-align:left; }
    @media (min-width: 680px){ #ysa-hero-{{ section.id }} .how-grid{ grid-template-columns: repeat(2, 1fr); } }
    @media (min-width: 1100px){ #ysa-hero-{{ section.id }} .how-grid{ grid-template-columns: repeat({{ section.settings.how_columns_desktop | default: 4 }}, 1fr); } }
    #ysa-hero-{{ section.id }} .how-card{ border-radius:16px; border:1px solid rgba(134,242,255,.14); background:#0b1226; box-shadow: 0 12px 32px rgba(0,0,0,.35), inset 0 0 60px rgba(79,220,255,.06); padding: clamp(20px, 2.2vw, 28px); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease; will-change: transform; }
    #ysa-hero-{{ section.id }} .how-card:hover{ transform: translateY(-6px) scale(1.01); border-color: rgba(134,242,255,.55); box-shadow: 0 18px 44px rgba(18,180,255,.28), 0 0 0 1px rgba(134,242,255,.18); }
    #ysa-hero-{{ section.id }} .chip{ display:inline-flex; align-items:center; justify-content:center; width:28px; height:28px; border-radius:999px; font-weight:800; font-size:13px; background: radial-gradient(120% 120% at 30% 30%, var(--cyber-400), var(--cyber-500)); color:#001018; border:1px solid rgba(134,242,255,.45); box-shadow: 0 6px 18px rgba(18,180,255,.35), inset 0 0 8px rgba(255,255,255,.18); margin-bottom:10px; }
    #ysa-hero-{{ section.id }} .how-title-sm{ margin:0 0 6px 0; font-family:"Orbitron",sans-serif; font-weight:800; font-size: clamp(18px, 1.6vw, 22px); }
    #ysa-hero-{{ section.id }} .how-body{ margin:0; color:var(--text-300); font-size:16px; line-height:1.6; }
    #ysa-hero-{{ section.id }} .how-divider{ height:1px; background:rgba(200,220,255,.12); margin: 12px 0; }
    #ysa-hero-{{ section.id }} .how-cta-wrap{ margin-top: clamp(18px, 3vh, 28px); display:flex; justify-content:center; }
    #ysa-hero-{{ section.id }} .how-btn{ display:inline-flex; align-items:center; justify-content:center; gap:10px; padding:14px 22px; border-radius:10px; font-weight:800; cursor:pointer; border:1px solid rgba(134,242,255,.35); background: linear-gradient(90deg, var(--cyber-400), var(--cyber-500)); color:#001018; text-decoration:none; font-size: clamp(14px,1.2vw,16px); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease, color .2s ease, background .2s ease, filter .2s ease; box-shadow: 0 10px 26px rgba(18,180,255,.35), inset 0 0 14px rgba(255,255,255,.18); }
    #ysa-hero-{{ section.id }} .how-btn:hover{ transform: translateY(-6px) scale(1.03); box-shadow: 0 18px 44px rgba(18,180,255,.55), 0 0 24px rgba(79,220,255,.45), inset 0 0 18px rgba(255,255,255,.24); }

    /* REVIEWS (auto-scroll) */
    #ysa-hero-{{ section.id }} .reviews-wrap{ background:#0b1226; padding: var(--gap-reviews) 0 clamp(48px, 10vh, 100px); box-shadow: 0 12px 32px rgba(0,0,0,.35), inset 0 0 60px rgba(79,220,255,.06); }
    #ysa-hero-{{ section.id }} .reviews{ width:min(1280px, 94vw); margin:0 auto; position:relative; padding: clamp(24px, 3vw, 40px); }
    #ysa-hero-{{ section.id }} .reviews-title{ margin:0; text-align:center; font-family:"Orbitron",sans-serif; font-weight:800; font-size: clamp(28px, 3.4vw, 44px); background: conic-gradient(from 210deg,#bff5ff 0%, #76e6ff 25%, var(--cyber-500) 55%, #7dd6ff 80%, #d9fbff 100%); -webkit-background-clip:text; background-clip:text; color:transparent; text-shadow: 0 0 24px rgba(18,180,255,.28); }
    #ysa-hero-{{ section.id }} .reviews-sub{ text-align:center; color:var(--text-300); margin: 8px auto 16px; max-width:900px; font-size: clamp(16px, 1.6vw, 20px); }

    #ysa-hero-{{ section.id }} .auto-wrap{ position:relative; overflow:hidden; -webkit-mask-image: linear-gradient(to right, transparent 0%, #000 2%, #000 99%, transparent 100%); mask-image: linear-gradient(to right, transparent 0%, #000 6%, #000 94%, transparent 100%); }
    #ysa-hero-{{ section.id }} .auto-lane{ display:flex; gap:16px; width:max-content; padding: 8px 2vw 24px; animation: ysa-rev-{{ section.id }} var(--rev-dur, 40s) linear infinite; }
    #ysa-hero-{{ section.id }} .auto-lane:nth-child(2){ animation-delay: calc(var(--rev-dur, 40s) / -2); }
    @keyframes ysa-rev-{{ section.id }}{ 0%{transform:translateX(0)} 100%{transform:translateX(-50%)} }

    #ysa-hero-{{ section.id }} .review-card{ flex: 0 0 420px; border-radius:16px; border:1px solid rgba(134,242,255,.14); background:#0b1226; box-shadow: 0 12px 32px rgba(0,0,0,.35), inset 0 0 60px rgba(79,220,255,.06); padding:20px; min-height:220px; transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease; }
    #ysa-hero-{{ section.id }} .review-card:hover{ transform: translateY(-6px) scale(1.01); border-color: rgba(134,242,255,.55); box-shadow: 0 18px 44px rgba(18,180,255,.28), 0 0 0 1px rgba(134,242,255,.18); }
    #ysa-hero-{{ section.id }} .rev-top{ display:flex; align-items:center; gap:10px; margin-bottom:8px; }
    #ysa-hero-{{ section.id }} .avatar{ width:34px; height:34px; border-radius:50%; background: radial-gradient(120% 120% at 30% 30%, var(--cyber-300), var(--cyber-500)); color:#001018; display:grid; place-items:center; font-weight:800; border:1px solid rgba(134,242,255,.45); box-shadow: 0 4px 14px rgba(18,180,255,.35), inset 0 0 8px rgba(255,255,255,.18); font-size:13px; flex:0 0 34px; }
    #ysa-hero-{{ section.id }} .rev-name{ font-weight:800; }
    #ysa-hero-{{ section.id }} .rev-time{ color:var(--text-300); font-size:12px; }
    #ysa-hero-{{ section.id }} .rev-body{ color:var(--text-100); font-size:16px; line-height:1.55; }
    #ysa-hero-{{ section.id }} .rev-stars{ display:flex; gap:4px; margin-top:10px; filter: drop-shadow(0 0 6px rgba(18,180,255,.35)); }
    #ysa-hero-{{ section.id }} .rev-stars svg{ width:16px; height:16px; }

    /* ===== FOOTER (YSACheats / blue theme) ===== */
    #ysa-hero-{{ section.id }} .footer-wrap{ background:#0b1226; padding: var(--gap-footer) 0 0; box-shadow: 0 -12px 32px rgba(0,0,0,.35), inset 0 0 60px rgba(79,220,255,.06); }
    #ysa-hero-{{ section.id }} .ysa-footer{ width:100%; margin:0; border-top:1px solid rgba(18,180,255,.25); }
