{%- liquid
  assign single_break_text = section.settings.single_break_text
  assign single_break_subtext = section.settings.single_break_subtext
  assign single_break_subtext_breaks = section.settings.single_break_subtext_breaks
  assign text = section.settings.text
  assign highest_discount_text = section.settings.highest_discount_text

  assign dbtfy_gift_wrap_product = settings.dbtfy_gift_wrap_product
  assign heading = section.settings.heading
-%}

{%- capture section_settings -%}
  {
    "singleBreakText": {{ single_break_text | json }},
    "singleBreakSubtext": {{ single_break_subtext | json }},
    "singleBreakSubtextBreaks": {{ single_break_subtext_breaks | json }},
    "text": {{ text | json }},
    "highestDiscountText": {{ highest_discount_text | json }},
    "giftWrapProductId": {{ dbtfy_gift_wrap_product.id | json }},
    "heading" : {{ heading | json }}
  }
{%- endcapture -%}

{%- if section.blocks.size > 0 -%}
  <div class="dbtfy-quantity-breaks" data-section-settings='{{ section_settings }}' hidden>
    {%- for block in section.blocks -%}
      {%- if block.type == 'cart-break' -%}
        {%- for index in (1..10) -%}
          {%- liquid
            assign range_key = 'cart_break_range_' | append: index
            assign discount_code_key = 'cart_break_discount_code_' | append: index
            assign discount_amount_key = 'cart_break_discount_amount_' | append: index
            assign discount_type_key = 'cart_break_discount_type_' | append: index
  
            assign range = block.settings[range_key]
            assign discount_code = block.settings[discount_code_key]
            assign discount_amount = block.settings[discount_amount_key]
            assign discount_type = block.settings[discount_type_key]
          -%}

          {%- capture block_settings -%}
            {
              "range": {{ range | json }},
              "discountCode": {{ discount_code | json }},
              "discountAmount": {{ discount_amount | json }},
              "discountType": {{ discount_type | json }}
            }
          {%- endcapture -%}

          {%- if discount_code != blank and discount_amount != blank -%}
            <div class="dbtfy-quantity-breaks__cart-break"
                 data-block-settings='{{ block_settings }}'
                 {{ block.shopify_attributes }}>
            </div>
          {%- endif -%}
        {%- endfor -%}
      {%- elsif block.type == 'product-break' -%}
        {%- liquid
          assign show_on_product_page = block.settings.product_break_show_on_product_page
          assign visibility = block.settings.product_break_visibility
          assign tags = block.settings.product_break_tags
          assign types = block.settings.product_break_types
          assign product = block.settings.product_break_product
          assign collection = block.settings.product_break_collection
        -%}

        {%- capture block_settings -%}
          {
            "showOnProductPage": {{ show_on_product_page | json }},
            "visibility": {{ visibility | json }},
            "collection": {{ collection | json }},
            "types": {{ types | json }},
            "tags": {{ tags | json }},
            "productId": {{ product.id | json }}
          }
        {%- endcapture -%}

        <div class="dbtfy-quantity-breaks__product-breaks"
             data-block-settings='{{ block_settings }}'
             {{ block.shopify_attributes }}>

          {%- for index in (1..5) -%}
            {%- liquid
              assign range_key = 'product_break_range_' | append: index
              assign discount_code_key = 'product_break_discount_code_' | append: index
              assign discount_amount_key = 'product_break_discount_amount_' | append: index
              assign discount_type_key = 'product_break_discount_type_' | append: index

              assign product_break_tag_1_key = 'product_break_tag_1_' | append: index
              assign product_break_tag_1_background_color_key = 'product_break_tag_1_background_color_' | append: index
              assign product_break_tag_1_text_color_key = 'product_break_tag_1_text_color_' | append: index
              assign product_break_tag_1_border_color_key = 'product_break_tag_1_border_color_' | append: index
              assign product_break_tag_2_key = 'product_break_tag_2_' | append: index
              assign product_break_tag_2_background_color_key = 'product_break_tag_2_background_color_' | append: index
              assign product_break_tag_2_text_color_key = 'product_break_tag_2_text_color_' | append: index
              assign product_break_tag_2_border_color_key = 'product_break_tag_2_border_color_' | append: index

              assign product_break_tag_1 = block.settings[product_break_tag_1_key]
              assign product_break_tag_1_background_color = block.settings[product_break_tag_1_background_color_key]
              assign product_break_tag_1_text_color = block.settings[product_break_tag_1_text_color_key]
              assign product_break_tag_1_border_color = block.settings[product_break_tag_1_border_color_key]
              assign product_break_tag_2 = block.settings[product_break_tag_2_key]
              assign product_break_tag_2_background_color = block.settings[product_break_tag_2_background_color_key]
              assign product_break_tag_2_text_color = block.settings[product_break_tag_2_text_color_key]
              assign product_break_tag_2_border_color = block.settings[product_break_tag_2_border_color_key]
              assign product_break_tag_background_color = block.settings[product_break_tag_background_color_key]
              assign product_break_tag_text_color = block.settings[product_break_tag_text_color_key]
              
              assign range = block.settings[range_key]
              assign discount_code = block.settings[discount_code_key]
              assign discount_amount = block.settings[discount_amount_key]
              assign discount_type = block.settings[discount_type_key]
            -%}

            {%- capture block_settings -%}
              {
                "range": {{ range | json }},
                "discountCode": {{ discount_code | json }},
                "discountAmount": {{ discount_amount | json }},
                "discountType": {{ discount_type | json }},
                "productBreakTag1": {{ product_break_tag_1 | json }},
                "productBreakTag1BackgroundColor": {{ product_break_tag_1_background_color | json }},
                "productBreakTag1TextColor": {{ product_break_tag_1_text_color | json }},
                "productBreakTag1BorderColor": {{ product_break_tag_1_border_color | json }},
                "productBreakTag2": {{ product_break_tag_2 | json }},
                "productBreakTag2BackgroundColor": {{ product_break_tag_2_background_color | json }},
                "productBreakTag2TextColor": {{ product_break_tag_2_text_color | json }},
                "productBreakTag2BorderColor": {{ product_break_tag_2_border_color | json }}
              }
            {%- endcapture -%}

            {%- if discount_code != blank and discount_amount != blank -%}
              <div class="dbtfy-quantity-breaks__product-break"
                   data-block-settings='{{ block_settings }}'>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
{%- endif -%}

